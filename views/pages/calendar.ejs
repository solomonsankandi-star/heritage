<div id="calendar" class="page">
    <section class="calendar-section">
        <div class="container">
            <h2>Calendar of Historical Events</h2>
            <p style="text-align:center; max-width: 800px; margin: -1rem auto 2rem;">Discover significant historical events for each day of the year. The "Memorial of the Day" on the home page is automatically updated from this calendar.</p>
            
            <div class="events-list">
                <% if (allEvents && allEvents.length > 0) { %>
                    <% allEvents.forEach(event => { %>
                        <div class="event-item">
                            <div class="event-date">
                                <% 
                                    // Create a month name from the month number
                                    const monthName = new Date(2024, event.month - 1, 1).toLocaleString('default', { month: 'long' });
                                %>
                                <%= monthName %> <%= event.day %>
                            </div>
                            <div class="event-title">
                                <%= event.title %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="event-item-empty">
                        <p>No historical events have been added to the calendar yet. An administrator can add events from the dashboard.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
</div>

