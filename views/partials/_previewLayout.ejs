        -->
        <%- include('../pages/home', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/gallery', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/memorials', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/map', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/about', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/calendar', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/dashboard', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/admin', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
        <%- include('../pages/login', { siteImages, siteTexts, memorialOfTheDay, allEvents }) %>
    </main>

    <script>
        const siteTexts = <%- JSON.stringify(siteTexts) %>;
    </script>
    <!-- Leaflet JS for the map page -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="/js/api.js"></script>
    <script src="/js/interactive-map.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>